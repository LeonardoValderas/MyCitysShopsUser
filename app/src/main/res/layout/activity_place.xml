<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valdroide.mycitysshopsadm.main.place.ui.PlaceActivity">

    <TextView
        android:id="@+id/textCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="PaÃ­s"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerCountry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textCountry"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_style_spinner"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerCountry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Provincia"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerState"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textState"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_style_spinner"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/textCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerState"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Ciudad"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textCity"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_style_spinner"
        android:spinnerMode="dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerCity"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonInto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPass"
            android:background="@drawable/background_oval_button"
            android:text="Ingresar"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

</RelativeLayout>
